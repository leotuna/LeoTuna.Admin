@model LeoTuna.Admin.Web.Dtos.ConfirmPasswordRecoveryDto

<div class="login-page" style="min-height: 398px;">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <span class="h1"><b>LeoTuna</b>.Admin</span>
            </div>
            <div class="card-body">
                <p class="login-box-msg">You are only one step a way from your new password, recover your password now.</p>
                <form asp-action="ConfirmPasswordRecovery" method="post">
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" required>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Change password</button>
                        </div>
                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <a asp-action="SignIn">Login</a>
                </p>
            </div>
        </div>
    </div>
</div>